@model AutoPartVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.AutoPart!.Id != 0 ? "Update" : "Create") Auto Part</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="AutoPart!.Id" />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* <div asp-validation-summary="All"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AutoPart!.AutoPartName" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.AutoPartName" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.AutoPartName" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <textarea asp-for="AutoPart!.AutoPartDescription" class="form-control border-0 shadow"></textarea>
                            <label asp-for="AutoPart!.AutoPartDescription" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AutoPart!.ListPrice" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.ListPrice" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.ListPrice" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AutoPart!.Price" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.Price" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.Price" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AutoPart!.Price50" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.Price50" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.Price50" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AutoPart!.Price100" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.Price100" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.Price100" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AutoPart!.NumberOfPieces" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.NumberOfPieces" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.NumberOfPieces" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.AutoPart!.CarId" asp-items="@Model.CarList" class="form-select border-0 shadow">
                                <option disabled selected>--Selecet Category--</option>
                            </select>
                            <label asp-for="AutoPart!.CarId" class="ms-2"></label>
                            <span asp-validation-for="AutoPart!.CarId" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                             <input asp-for="AutoPart!.AutoPartPhoto" type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="AutoPart!.AutoPartPhoto" class="ms-2"></label> 


                        </div>

                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.AutoPart.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>

                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }


                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="AutoPart" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to the List
                                </a>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="col-2">
                     <img src="@Model.AutoPart.AutoPartPhoto" width="100%" 
                         style="border-radius:5px;border:1px solid #bbb9b9" />
                </div>
            </div>



        </form>
    </div>
</div>


@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}