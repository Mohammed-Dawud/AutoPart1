@model Car
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Car Data</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div lass="border p-3">
                <div class="form-floating py-2 col-12">
                    <select asp-for="BrandId" asp-items="@(ViewData["BrandList"] as IEnumerable<SelectListItem>)" class="form-select border-0 shadow">
                        <option disabled selected>--Select Brand--</option>
                    </select>
                    <label asp-for="BrandId" class="ms-2"></label>
                    <span asp-validation-for="BrandId" class="text-danger"></span>

                </div>
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="CarName" class="form-control border-0 shadow" />
                    <label asp-for="CarName" class="ms-2"></label>
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarPhoto" class="control-label"></label>
                    <input asp-for="CarPhoto" class="form-control" type="file" />
                    <span asp-validation-for="CarPhoto" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Car" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to the List
                        </a>
                    </div>

                </div>

            </div>


        </form>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}