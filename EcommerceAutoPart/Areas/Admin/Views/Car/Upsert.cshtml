@model CarVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Car!.Id != 0 ? "Update" : "Create") Car</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Car!.Id" />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Car!.CarName" class="form-control border-0 shadow" />
                            <label asp-for="Car!.CarName" class="ms-2"></label>
                            <span asp-validation-for="Car!.CarName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Car!.BrandId" asp-items="Model.BrandList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Brand--</option>
                            </select>
                            <label asp-for="Car!.BrandId" class="ms-2"></label>
                            <span asp-validation-for="Car!.BrandId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Car!.CarPhoto" type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Car!.CarPhoto" class="ms-2"></label>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Car.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Car" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to the List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Car.CarPhoto" width="100%"
                         style="border-radius:5px;border:1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
