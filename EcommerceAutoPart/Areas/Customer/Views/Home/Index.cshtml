@model IEnumerable<Brand>
@{
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

@section MainSection {
    <!-- search area -->
    <div class="search-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span class="close-btn"><i class="fas fa-window-close"></i></span>
                    <div class="search-bar">
                        <div class="search-bar-tablecell">

                            <form asp-controller="Home" asp-action="SearchByName" method="post">

                                <h3>Search For:</h3>


                                <input type="text" name="Name" placeholder="Keywords" value="@Html.Value("Name")">
                                <button type="submit">Search <i class="fas fa-search"></i></button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end search area -->
    <!-- home page slider -->
    <div class="homepage-slider">
        <!-- single home slider -->
        <div class="single-homepage-slider" style="background-image: url('https://www.honda-mideast.com/en-bh/-/media/honda/home-page/home-banner/slider/ehev-landingslider-mobile.jpg');">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-7 offset-lg-1 offset-xl-0">
                        <div class="hero-text">
                            <div class="hero-text-tablecell">
                                <p class="subtitle">Auto Part</p>
                                <h1>We have all the parts available</h1>
                                <div class="hero-btns">
                                    <a asp-controller="Home" asp-action="CarView" class="boxed-btn">View Collections</a>
                                    <a asp-controller="Home" asp-action="Contact" class="bordered-btn">Contact Us</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- single home slider -->
        <div class="single-homepage-slider" style="background-image:url('https://d2hucwwplm5rxi.cloudfront.net/wp-content/uploads/2022/09/13073917/Car-History-Mitsubishi-Lancer-_-Cover-13-9-22.jpg');">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 offset-lg-1 text-center">
                        <div class="hero-text">
                            <div class="hero-text-tablecell">
                                <p class="subtitle">Auto Part</p>
                                <h1>Genuine Taiwanese Parts</h1>
                                <div class="hero-btns">
                                    <a asp-controller="Home" asp-action="CarView" class="boxed-btn">Visit Shop</a>
                                    <a asp-controller="Home" asp-action="Contact" class="bordered-btn">Contact Us</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- single home slider -->
        <div class="single-homepage-slider" style="background-image:url('https://wallpaperaccess.com/full/1401562.jpg')">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 offset-lg-1 text-right">
                        <div class="hero-text">
                            <div class="hero-text-tablecell">

                                <p class="subtitle">Mega Sale Going On!</p>
                                <h1>Maintenance and Installation Services</h1>
                                <div class="hero-btns">
                                    <a asp-controller="Home" asp-action="CarView" class="boxed-btn">Visit Shop</a>
                                    <a asp-controller="Home" asp-action="Contact" class="bordered-btn">Contact Us</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end home page slider -->
    <!-- features list section -->
    <div class="list-section pt-80 pb-80">
        <div class="container">

            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <div class="list-box d-flex align-items-center">
                        <div class="list-icon">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="content">
                            <h3>Free Shipping</h3>
                            <p>When order over $75</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <div class="list-box d-flex align-items-center">
                        <div class="list-icon">
                            <i class="fas fa-phone-volume"></i>
                        </div>
                        <div class="content">
                            <h3>24/7 Support</h3>
                            <p>Get support all day</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="list-box d-flex justify-content-start align-items-center">
                        <div class="list-icon">
                            <i class="fas fa-sync"></i>
                        </div>
                        <div class="content">
                            <h3>Refund</h3>
                            <p>Get refund within 3 days!</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- end features list section -->
    <!-- product section -->
    <div class="product-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3><span class="orange-text">Cars</span> Brand</h3>
                        <p>Show what we have :</p>
                    </div>
                </div>
            </div>

            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a asp-controller="Home" asp-action="CarView"><img src="@item.BrandPhoto" alt="" height="195"></a>
                            </div>
                            <h3>@item.BrandName</h3>
                            <a asp-controller="Home" asp-action="CarView" class="cart-btn"><i class="fas fa-shopping-cart"></i> See Models</a>
                        </div>
                    </div>
                } \



            </div>
        </div>
    </div>
    <!-- end product section -->
    <!-- testimonail-section -->
    <div class="testimonail-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1 text-center">
                    <div class="testimonial-sliders">
                        <div class="single-testimonial-slider">
                            @* <div class="client-avater">
                                <img src="~/images/Dawud.jpg" alt="">
                            </div> *@
                            <div class="client-meta">
                                <h3>Mohammed Dawud<span>Full Stack Developer</span></h3>
                                <p class="testimonial-body">
                                    "I am a Full Stack Developer, proficient in both front-end and back-end technologies, dedicated to crafting seamless web experiences. My skills and expertise make me a valuable asset in building innovative web solutions."

                                </p>
                                <div class="last-icon">
                                    <i class="fas fa-quote-right"></i>
                                </div>
                            </div>
                        </div>
                        <div class="single-testimonial-slider">
                            <div class="client-avater">
                                 <img src="~/images/autoPart.jpg" alt=""> 
                             </div> 
                             <div class="client-meta"> 
                                 <h3>AutoPart<span>Project</span></h3> 
                                 <p class="testimonial-body">
                                     "This is My Project" 
                                 </p> 
                                 <div class="last-icon"> 
                                     <i class="fas fa-quote-right"></i> 
                                 </div>
                             </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end testimonail-section -->
    <!-- advertisement section -->
    <div class="abt-section mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="abt-bg" style="background-image:url('https://hunterae.com/wp-content/uploads/images/auto-parts-videohive-25253400-download-free-hunterae-com-1.jpg')">
                        <a href="https://www.youtube.com/watch?v=W6Ms9nglTbw" class="video-play-btn popup-youtube"><i class="fas fa-play"></i></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="abt-text">
                        <p class="top-sub">Since Year 1999</p>
                        <h2>We are <span class="orange-text">Auto Parts</span></h2>
                        <p>
                            Selling car parts is a thriving industry that caters to the diverse needs of automobile enthusiasts and repair shops. Whether you're looking for replacement parts to keep your vehicle running smoothly or seeking aftermarket upgrades to enhance performance, the market offers a wide range of options. Online platforms and brick-and-mortar stores are both popular avenues for buying car parts, providing customers with access to a vast inventory of components, from engine parts and brakes to body panels and accessories. This sector not only supports the maintenance and customization of vehicles but also contributes significantly to the automotive economy.
                        </p>
                        @* <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sapiente facilis illo repellat veritatis minus, et labore minima mollitia qui ducimus.</p> *@
                        <a asp-controller="Home" asp-action="About" class="boxed-btn mt-4">know more</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end advertisement section -->
    <!-- logo carousel -->
    <div class="logo-carousel-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="logo-carousel-inner">
                        <div class="single-logo-item">
                            <img src="images/HondaLogo.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="images/MitsubishiLogo.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="images/ToyotaLogo.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="images/HondaLogo.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="images/MitsubishiLogo.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="images/ToyotaLogo.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end logo carousel -->
}
