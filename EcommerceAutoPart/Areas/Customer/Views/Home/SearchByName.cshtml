@model IEnumerable<Brand>
@{
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}
@section MainSection {
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 text-center">
            <div class="single-product-item">
                <div class="product-image">
                    <a asp-controller="CarsView" asp-action="CarView"><img src="@item.BrandPhoto" alt="" height="195"></a>
                </div>
                <h3>@item.BrandName</h3>
                <a asp-controller="CarsView" asp-action="CarView" class="cart-btn"><i class="fas fa-shopping-cart"></i> See Models</a>
            </div>
        </div>
    }
}

